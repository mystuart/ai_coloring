.word-tabbar {
	background-color: #F56C6C;
}

.sd_size .weui-actionsheet__menu {
	display: flex;
	max-height: 300px;
	overflow-y: auto;
	flex-direction: column;
}

.sd_size .weui-actionsheet__cell {
	font-size: smaller;
	display: flex;
	align-items: center;
	padding-left: 30%;
}

.my-word-item {
	flex: 1;
	padding: 2px;
}

.my-word-image-short {
	width: 32px;
	height: 32px;
}

.my-word-image {
	width: 200px;
}

.my-word-title {
	font-size: 24px;
	line-height: 24px;
	margin-bottom: 8px;
	text-align: center;
}

.my-word-text {
	font-size: xx-small;
	font-size: 12px;
	line-height: 12px;
}

.word-icon {
	padding: 3px;
	width: 16px;
	height: 16px;
}

.model-area {
	border: 1px dashed gray;
	width: calc(100% - 18px);
	padding: 8px;
	margin-top: 8px;
	margin-bottom: 8px;
}

.word-icon:not(:last-child) {
	border-right: 1px solid gray;
}

.my-word-right-menu-system {
	position: fixed;
	z-index: 3;
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	background-color: white;
	right: -9px
}

.my-word-right-menu {
	position: fixed;
	z-index: 3;
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	background-color: white;
	left: -9px;
}

.my-word-right-menu-handler {
	width: 32px;
	height: 32px;
	position: fixed;
	z-index: 3;
	margin-left: -2px;
	left: 0;
	border: 1px solid gray;
	padding: 3px;
	background-color: white;
}

.my-word-right-menu-system-handler {
	width: 32px;
	background-color: white;
	height: 32px;
	position: fixed;
	z-index: 3;
	margin-right: 1px;
	right: -2px;
	border: 1px solid gray;
	padding: 3px;
}